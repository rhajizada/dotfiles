{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "duckduckgo": {
      "type": "local",
      "command": ["docker", "run", "-i", "--rm", "mcp/duckduckgo"],
      "enabled": true,
    },
    "fetch": {
      "type": "local",
      "command": ["docker", "run", "-i", "--rm", "mcp/fetch"],
      "enabled": true,
    },
    "kubernetes": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-v",
        "{env:HOME}/.kube/config:/kubeconfig:ro",
        "--env",
        "KUBECONFIG_PATH=/kubeconfig",
        "mcp/kubernetes",
      ],
      "enabled": true,
    },
    "next-devtools-mcp": {
      "type": "local",
      "command": ["docker", "run", "-i", "--rm", "mcp/next-devtools-mcp"],
      "enabled": true,
    },
    "openapi": {
      "type": "local",
      "command": ["docker", "run", "-i", "--rm", "-e", "MODE", "mcp/openapi"],
      "enabled": true,
      "environment": {
        "MODE": "Stdio",
      },
    },
    "sequentialthinking": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-e",
        "MODE",
        "mcp/sequentialthinking",
      ],
      "enabled": true,
      "environment": {
        "MODE": "Stdio",
      },
    },
  },
  "provider": {
    "llamero": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Llamero",
      "options": {
        "baseURL": "{env:LLAMERO_API_BASE}",
        "apiKey": "{env:LLAMERO_API_KEY}",
      },
      "models": {
        "llama3.1:8b-instruct-q4_K_M": {
          "name": "Llama 3.1",
        },
        "qwen3:14b": {
          "name": "Qwen3",
        },
        "devstral-small-2:24b": {
          "name": "Devstral 2",
        },
      },
    },
  },
}
